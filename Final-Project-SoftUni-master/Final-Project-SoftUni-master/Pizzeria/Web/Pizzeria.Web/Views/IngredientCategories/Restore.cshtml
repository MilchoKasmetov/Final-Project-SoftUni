@using Pizzeria.Web.ViewModels.IngredientCategories
@model ICollection<IngredientCategoryViewModel>

@{
    ViewBag.Title = "All Deleted Ingredient Categories";
}


<h2 class="text-center">@ViewBag.Title</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Ingredient Category Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredientCategory in Model)
        {
            <tr>

                <td>@ingredientCategory.Name</td>
                <td>
                    <form class="input-group-sm" asp-route-id="@ingredientCategory.Id" asp-controller="IngredientCategories" asp-action="Edit" method="get">
                        <input type="submit" value="Update" class="fs-6 btn btn-success mb-3 p-2" />
                    </form>

                    <form class="input-group-sm" asp-route-id="@ingredientCategory.Id" asp-controller="IngredientCategories" asp-action="Restore" method="post" onclick="return confirm('Are you sure you want to restore this?')">
                        <input type="submit" value="Restore" class="fs-6 btn btn-success mb-3 p-2" />
                    </form>
                </td>

            </tr>
        }



    </tbody>
</table>
