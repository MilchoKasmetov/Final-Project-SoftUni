@using Pizzeria.Web.ViewModels.Pizzas
@model ICollection<PizzaViewModel>

@{
    ViewBag.Title = "All Deleted Pizzas";
}


<h2 class="text-center">@ViewBag.Title</h2>


<div class="text-center row">
    @foreach (var pizza in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <img class="card-img-top" style="width: 18rem;"
             src="@pizza.ImageURL" alt="pizza Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@pizza.Name</h5>
                <p>@pizza.Ingredients</p>
                <p>@pizza.Price $</p>
            </div>

            <form class="input-group-sm" asp-route-id="@pizza.Id" asp-controller="Pizzas" asp-action="Edit" method="get">
                <input type="submit" value="Update" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
            <form class="input-group-sm" asp-route-id="@pizza.Id" asp-controller="Pizzas" asp-action="Restore" method="post" onclick="return confirm('Are you sure you want to restore this?')">
                <input type="submit" value="Restore" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>
