@using Pizzeria.Web.ViewModels.Dough
@model ICollection<DoughViewModel>;
@{
    ViewBag.Title = "All Dough";
}


<h2 class="text-center">@ViewBag.Title</h2>

<table class="table">
    <thead>
        <tr>
            <th class="text-white" scope="col">Dough Name</th>
            <th class="text-white" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dough in Model)
        {
            <tr>

                <td class="text-white">@dough.Name</td>
                <td>
                    <form class="input-group-sm text-white" asp-route-id="@dough.Id" asp-controller="Doughs" asp-action="Edit" method="get">
                        <input type="submit" value="Update" class="fs-6 btn btn-success mb-3 p-2" />
                    </form>

                    <form class="input-group-sm" asp-route-id="@dough.Id" asp-controller="Doughs" asp-action="Delete" method="post" onclick="return confirm('Are you sure you want to delete this?')">
                        <input type="submit" value="Delete" class="fs-6 btn btn-success mb-3 p-2" />
                    </form>
                </td>

            </tr>
        }



    </tbody>
</table>