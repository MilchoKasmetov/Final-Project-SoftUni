@using Pizzeria.Web.ViewModels.SauceDips
@model ICollection<SauceDipViewModel>;
@{
    ViewBag.Title = "All Sauces";
}


<h2 class="text-center">@ViewBag.Title</h2>

<table class="table">
    <thead>
        <tr>
            <th class="text-white" scope="col">Sauce Name</th>
            <th class="text-white" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sauce in Model)
        {
            <tr>

                <td class="text-white">@sauce.Name</td>
                <td>
                    <form class="input-group-sm" asp-route-id="@sauce.Id" asp-controller="SauceDips" asp-action="Edit" method="get">
                        <input type="submit" value="Update" class="fs-6 btn btn-success mb-3 p-2" />
                    </form>

                    <form class="input-group-sm" asp-route-id="@sauce.Id" asp-controller="SauceDips" asp-action="Delete" method="post" onclick="return confirm('Are you sure you want to delete this?')">
                        <input type="submit" value="Delete" class="fs-6 btn btn-success mb-3 p-2" />
                    </form>
                </td>

            </tr>
        }



    </tbody>
</table>