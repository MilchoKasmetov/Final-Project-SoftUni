@using Pizzeria.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                {
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary">Show All</button>
                        <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Pizzas" asp-action="All">All Pizza</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Doughs" asp-action="All">All Dough</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="SauceDips" asp-action="All">All Sauce</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Ingredients" asp-action="All">All Ingredients</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="IngredientCategories" asp-action="All">All Ingredient Category</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Sizes" asp-action="All">All Sizes</a></li>

                        </ul>
                    </div>

                    <div class="btn-group">
                        <button type="button" class="btn btn-primary">Create</button>
                        <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Pizzas" asp-action="Create">Create Pizza</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Doughs" asp-action="Create">Create Dough</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="SauceDips" asp-action="Create">Create Sauce</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Ingredients" asp-action="Create">Create Ingredients</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="IngredientCategories" asp-action="Create">Create Ingredient Category</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Sizes" asp-action="Create">Create Size</a></li>

                        </ul>
                    </div>

                    <div class="btn-group">
                        <button type="button" class="btn btn-primary">Restore</button>
                        <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Pizzas" asp-action="Restore">Restore Pizza</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Doughs" asp-action="Restore">Restore Dough</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="SauceDips" asp-action="Restore">Restore Sauce</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Ingredients" asp-action="Restore">Restore Ingredients</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="IngredientCategories" asp-action="Restore">Restore Ingredient Category</a></li>
                            <li><a class="nav-link text-dark" asp-area="Administration" asp-controller="Sizes" asp-action="Restore">Restore Sizes</a></li>

                        </ul>
                    </div>

                }

                @if (this.User.IsInRole(GlobalConstants.UserRoleName))
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ShoppingCarts" asp-action="Index">Shopping Cart</a>
                            </li>

                        </ul>
                        
                    </div>

                }

                <partial name="_LoginPartial" />

            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>