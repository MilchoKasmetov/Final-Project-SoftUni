@using Pizzeria.Web.ViewModels.Pizzas
@model ICollection<PizzaViewModel>

@{
    ViewBag.Title = "All Pizzas";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var pizza in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <img class="card-img-top" style="width: 18rem;"
             src="@pizza.ImageURL" alt="pizza Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@pizza.Name</h5>
                <p>@pizza.Ingredients</p>
            </div>
            
            <form class="input-group-sm" asp-route-pizzaId="@pizza.Id" asp-controller="Pizzas" asp-action="AddToCollection" method="post">
                <input type="submit" value="Mark as Watched" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>
